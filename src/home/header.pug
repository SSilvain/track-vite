	header.header
		.header__container
			.header__logo
				img(src="img/logo.svg", alt="logo")
			.header__menu.menu
				button.menu__icon.icon-menu(type="button")
					span
				nav.menu__body
					ul.menu__list
						li.menu__item
							a.menu__link(href="#") Features
						li.menu__item
							a.menu__link(href="#") Our Team
						li.menu__item
							a.menu__link(href="#") Pricing
